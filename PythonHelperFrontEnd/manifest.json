{
  "manifest_version": 3,
  "name": "Python课程AI教学助手",
  "version": "1.0.0",
  "description": "一个帮助学习Python的Chrome插件，支持题目检索和大模型解析",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel",
    "tabs",
    "downloads",
    "cookies",
    "debugger"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "http://localhost:5000/*",
    "https://pintia.cn/*",
    "https://*.cloudstudio.club/*"
  ],
  "background": {
    "service_worker": "js/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/sidebar.css"]
    }
  ],
  "side_panel": {
    "default_path": "html/sidebar.html"
  },
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "action": {
    "default_title": "Python课程AI教学助手",
    "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["data/*"],
      "matches": ["<all_urls>"]
    }
  ]
}